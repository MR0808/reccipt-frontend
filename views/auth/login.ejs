<%- include('../includes/head.ejs') %>
	<body>
		
		<div class="body-bg">
		
			<section class="crancy-wc crancy-wc__full crancy-bg-cover" style="background-image: url('/img/credential-bg.svg');">
				<div class="container">
					<div class="row">
						<div class="col-12">
							<div class="crancy-wc__form">
								<!-- Welcome Banner -->
								<div class="crancy-wc__form--middle">
									<div class="crancy-wc__banner">
										<div class="crancy-wc__logo">
											<a href="index.html"><img src="/img/logo-white.png" alt="#"></a>
										</div>
										<img src="/img/welcome-vector.png" alt="#">
									</div>
									<div class="crancy-wc__form-inner">
										<div class="crancy-wc__heading">
											<h3 class="crancy-wc__form-title crancy-wc__form-title__one">Login to your account</h3>
										</div>
										<% if (errorMessage) { %>
											<div class="user-message user-message--error"><%= errorMessage %></div>
										<% } %>
										<!-- Sign in Form -->
										<form class="crancy-wc__form-main" action="/login" method="POST" novalidate>
											<!-- Form Group -->
											<div class="form-group">
												<div class="form-group__input">
													<input class="crancy-wc__form-input <%= validationErrors.find( e => e.path === 'email') ? 'invalid' : '' %>" type="email" name="email" id="email" 
                    value="<%= oldInput.email %>" placeholder="admin@mail.com">
												</div>
											</div>
											<!-- Form Group -->
											<div class="form-group">
												<div class="form-group__input">
													<input class="crancy-wc__form-input <%= validationErrors.find( e => e.path === 'password') ? 'invalid' : '' %>" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" id="password-field" type="password" name="password" id="password" value="<%= oldInput.password %>" required="required">
													<span class="crancy-wc__toggle"><i class="fas fa-eye" id="toggle-icon"></i></span>
												</div>
											</div>
											<!-- Form Group -->
											<div class="form-group">
												<div class="crancy-wc__check-inline">
													<div class="crancy-wc__checkbox">
														<input class="crancy-wc__form-check" id="remember" name="remember" type="checkbox">
														<label for="checkbox">Remember Me</label>
													</div>
													<div class="crancy-wc__forgot">
														<a href="forget-password.html" class="forgot-pass">Forgot Password?</a>
													</div>
												</div>
											</div>
											<!-- Form Group -->
											<div class="form-group form-mg-top25">
												<div class="crancy-wc__button">
													<button class="ntfmax-wc__btn" type="submit">Sign in</button>
												</div>
										</form>	
										<!-- End Sign in Form -->
									</div>
								</div>
								<!-- End Welcome Banner -->
								<!-- Footer Top -->
								<div class="crancy-wc__footer--top">
									<p class="crancy-wc__footer--copyright">@ <%= new Date().getFullYear(); %> <a href="/">Reccipt.</a> All Right Reserved. </p>
								</div>
								<!-- End Footer Top -->
							</div>
						</div>
					</div>
				</div>
			</section>
			
		</div>
		
		<%- include('../includes/end.ejs') %>
		
	</body>
</html>
		